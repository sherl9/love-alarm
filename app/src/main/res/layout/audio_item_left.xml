<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_avatar"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            app:civ_border_color="#FF000000"
            app:civ_border_width="0dp"
            app:layout_constraintHorizontal_bias="0.498" />

        <me.jagar.chatvoiceplayerlibrary.VoicePlayerView
            android:id="@+id/voicePlayerView"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/profile_image"
            android:layout_marginLeft="5dp"
            android:padding="2dp"
            app:enableVisualizer="false"
            app:visualizationPlayedColor="#000"
            app:visualizationNotPlayedColor="#92A8D1"
            app:playPauseBackgroundColor="#92A8D1"
            app:timingBackgroundColor="#92A8D1"
            app:seekBarProgressColor="#615F5F"
            app:showShareButton="false"
            app:shareCornerRadius="60"
            app:playPauseCornerRadius="60"
            app:showTiming="true"
            app:viewCornerRadius="30"
            app:viewBackground="#E6E5EA"
            app:progressTimeColor="#000"
            app:seekBarThumbColor="#92A8D1"
            app:shareBackgroundColor="#ff7700"
            app:playProgressbarColor="#7C7B7B"
            />


        <TextView
            android:id="@+id/sent_time"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/voicePlayerView"
            android:paddingLeft="8dp"
            android:text="10-20 20:20:20"
            android:textAlignment="center"/>


    </RelativeLayout>

</RelativeLayout>